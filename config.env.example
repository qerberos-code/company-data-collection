# Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/company_data
DB_HOST=localhost
DB_PORT=5432
DB_NAME=company_data
DB_USER=username
DB_PASSWORD=password

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google AI Studio Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-1.5-flash

# LangChain Configuration
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=company-data-collection

# Wikipedia API Configuration
WIKIPEDIA_USER_AGENT=CompanyDataCollector/1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data Collection Configuration
MAX_RETRIES=3
REQUEST_DELAY=1.0
BATCH_SIZE=10

# Company Configuration
TARGET_COMPANY=Alphabet Inc.
COMPANY_SEARCH_TERMS=Alphabet,Google,Alphabet Holdings,Google LLC
